<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-5">
      <h2 class="mt-3 text-center", style="background-color: #eee; max-width: 250px;">新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="sign_up_field">
          <div class="field mt-3">
            <%= f.label :ニックネーム %><br />
            <%= f.text_field :nickname, placeholder:"2〜30文字", autofocus: true, autocomplete: "nickname" %>
          </div>
          <div class="field mt-3">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field mt-3">
            <%= f.label :パスワード（６文字以上） %>
            <% if @minimum_password_length %>
            <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field mt-3">
            <%= f.label :パスワード（確認用） %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="actions mt-3">
            <%= f.submit "新規会員登録", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>