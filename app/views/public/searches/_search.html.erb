<div class = "d-flex align-items-center justify-content-center mt-5 mb-5" >
  <% if user_signed_in? %>
    <div class = search_form >
      <%= form_with url: search_path, method: :get do |f| %>
        <%= f.text_field :word,  placeholder: "本を探す" %>
        <%= f.submit "検索", class:"btn-primary" %>
      <% end %>
    </div>
  <% end %> 
</div>