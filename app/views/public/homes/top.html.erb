<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5">
      <h5 class="mb-2 bg-secondary text-white"><b>カテゴリー一覧</b></h5>
      <% @categories.each do |category|%>
        <%= link_to category.name, books_path(category_id: category.id), class: "mx-1 my-1 btn btn-sm btn-warning" %>
      <% end %>
    </div>
    <div class="col-md-9 mt-5">
      <div class="read_info card mb-3">
        <h4 class="mb-2 bg-secondary text-white">レビューが多い本</h4>
        <div class="row ml-2">
          <% @reviews.each do |review| %>
            <% book = Book.find(review[0]) %>
            <div class="col-md-2">
              <%= link_to book_path(book.id) do %>
                <%= image_tag book.item_image_url, size: "100x140" %><br>
              <% end %>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </div>
          <% end %>
        </div>
        <%= link_to "レビューが多い本Top100", book_reviews_rank_path, class:"btn btn-outline-success mb-3"%>
      </div>
      <div class="read_info card mb-3">
        <h4 class="mb-2 bg-secondary text-white">注目の本</h4><!--観覧数-->
        <div class="row ml-2">
          <% @count_books.each do |book| %>
            <div class="col-md-2">
              <%= link_to book_path(book.id) do %>
                <%= image_tag book.item_image_url, size: "100x140" %><br>
              <% end %>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </div>
          <% end %>
        </div>
          <%= link_to "注目の本Top100", book_impressions_rank_path, class:"btn btn-outline-success mb-3"%>
      </div>
      <div class="read_info card mb-3">
        <h4 class="mb-2 bg-secondary text-white">フォロワーランキング</h4>
        <div class="row ml-2">
          <% @follower_ranking.each do |follower_ranking|%>
            <% user = User.find(follower_ranking[0])%>
            <div class="col-md-2">
              <div class="row">
                <%= link_to user_path(user) do %>
                  <%= image_tag user.get_profile_image(60,60), class:"rounded-circle" %>
                <% end %>
              </div>
              <div class="row">
                <%= link_to user_path(user) do %>
                  <%= user.nickname %>
                <% end %>
              </div>
              <div class="row">
                <%= link_to followers_user_path(user) do %>
                  <%= user.followers.count%>人
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <%= link_to "フォロワー数Top100", users_follower_rank_path, class:"btn btn-outline-success mb-3"%>
      </div>
    </div>
  </div>
</div>