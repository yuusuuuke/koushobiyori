<div class="container">
  <div class="read_info card mb-3">
    <h4 class="mb-2 bg-secondary text-white">読みたい本一覧</h4>
    <div class="row ml-2">
      <% @wish.each do |wish| %>
        <div class="col-md-2">
          <%= link_to book_path(wish.book.id) do %>
            <%= image_tag wish.book.item_image_url, size: "100x140" %><br>
          <% end %>
          <%= link_to book_path(wish.book.id) do %>
            <%= wish.book.title %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>