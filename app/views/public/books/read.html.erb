<div class="container mt-3">
  <div class="read_info card mb-3">
    <h4 class="mb-2 bg-secondary text-white">読んだ本一覧</h4>
    <div class="row ml-2">
      <% @read.each do |read| %>
        <div class="col-md-2">
          <%= link_to book_path(read.book.id) do %>
            <%= image_tag read.book.item_image_url, size: "100x140" %><br>
          <% end %>
          <%= link_to book_path(read.book.id) do %>
            <%= read.book.title %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>