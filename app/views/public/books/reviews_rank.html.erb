<div class="container">
  <div class="row my-3">
    <div class="card">
      <h5 class="card-title bg-secondary text-white" ><b>カテゴリー一覧</b></h5>
      <div class="card-body">
        <div class="col-md-12">
          <% @categories.each do |category|%>
            <%= link_to category.name, book_reviews_rank_path(category_id: category.id), class: "mx-1 my-1 btn btn-sm btn-warning" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <h5 class="bg-secondary text-white"><b>レビューの多い本Top100</b></h5>
  <div class="row">
    <% @count_reviews.each do |review| %>
    <% book = Book.find(review[0]) %>
      <div class="col-md-2 mb-2 d-flex flex-column form-inline">
        <%= link_to book_path(book.id) do%>
          <%= image_tag book.item_image_url, size: "100x140"%>
        <% end %>
        <%= link_to book_path(book.id) do%>
          <%= book.title%>
        <% end %>
      </div>
    <% end %>
  </div>
</div>