<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>アカウント設定</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
      <div class="form-group">
        <%= f.label :nickneme, "・ニックネーム" %>
        <%= f.text_field :nickname, class: "form-control nickname" %>
      </div>
     <div class="form-group">
        <%= f.label :profile_image, "・選択中のプロフィール画像" %><br>
        <%= image_tag @user.get_profile_image(100,100) %>
        <%= f.file_field :profile_image, class: "form-control-file plofile_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "・自己紹介文(100文字以内)" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      </div>
    <% end %>
    <%=link_to "マイページ", user_path(current_user), class: "btn btn-md btn-primary ml-5" %>
    <%=link_to "退会する", users_confirm_path, class: "btn btn-md btn-danger ml-5" %>
  </div>
</div>

