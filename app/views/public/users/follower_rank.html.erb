<div class='container mt-5 px-5 px-sm-0'>
  <h5 class="mt-3 text-center", style="background-color: #eee; width:150px; padding-left: 12px; margin-bottom: 20px;"><b>会員一覧</b></h5>
  <div class='row'>
    <div class="col-md-3">
      <b>会員ID / 会員登録日</b>
    </div>
    <div class="col-md-2">
      <b>画像</b>
    </div>
    <div class="col-md-3">
      <b>ニックネーム</b>
    </div>
    <div class="col-md-3">
      <b>フォロワー数</b>
    </div>
  </div>
  <% @follower_ranking.each do |follower_ranking| %>
    <% user = User.find(follower_ranking[0])%>
    <div class="row">
      <div class="col-md-3">
        <%= user.id %> / <%= l user.created_at%>
      </div>
      <div class="col-md-2">
        <%= link_to user_path(user.id),class: 'text-dark' do %>
          <%= image_tag user.get_profile_image(50,50), class:"rounded-circle" %>
        <% end %>
      </div>
      <div class="col-md-3">
        <%= link_to user_path(user.id),class: 'text-dark' do %>
          <%= user.nickname %>
        <% end %>
      </div>
      <div class="col-md-3">
        <b><%= user.followers.count%>人</b>
      </div>
    </div>
  <% end %>
</div>