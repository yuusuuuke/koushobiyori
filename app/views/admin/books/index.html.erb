<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5">
      <h5 class="bg-secondary text-white" ><b>カテゴリー一覧</b></h5>
      <% @categories.each do |category|%>
        <%= link_to category.name, admin_books_path(category_id: category.id), class: "mx-1 my-1 btn btn-sm btn-warning" %>
      <% end %>
    </div>
    <div class="col-md-9 mt-5">
      <h5 class="bg-secondary text-white"><b>本の一覧</b></h5>
      <dic class="row">
              <% @books.each do |book| %>
        <div class="col-md-3 col-lg-2">
          <%= link_to edit_admin_book_path(book) do%>
            <%= image_tag book.item_image_url, size: "100x140"%>
          <% end %>
          <%= link_to edit_admin_book_path(book) do%>
            <%= book.title%>
          <% end %>
        </div>
      <% end %>

      </dic>
    </div>
  </div>
</div>