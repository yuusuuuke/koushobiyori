<div class="container">
  <h5>本の一覧（登録順）</h5>
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-2 col-sm-4 col-6 d-flex flex-column form-inline mb-2">
        <%= link_to edit_admin_book_path(book) do%>
          <%=image_tag book.item_image_url, size: "100x140" %>
        <% end %>
        <%= link_to edit_admin_book_path(book) do%>
          <%= book.title %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>