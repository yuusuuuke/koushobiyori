<div class="container">
  <h5><%= @book.title%>の編集画面</h5>
  <div class="row mt-5">
    <%= form_with model:@book, url: admin_book_path, method: :patch do |f|%>
      <div class="col-md8">
        <div class="form-group">
          <%= image_tag @book.item_image_url, size: "100x140" %>
          <%= f.file_field :item_image_url, class: "form-control-file plofile_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: "form-control " %>
        </div>
        <div class="form-group">
          <%= f.label :author, "著者" %>
          <%= f.text_field :author, class: "form-control " %>
        </div>
        <div class="form-group">
          <%= f.label :isbn, "isbn番号" %><br>
          <%= @book.isbn %>
        </div>
        <div class="form-group">
          <%= f.label :item_url, "本のURL" %>
          <%= f.text_field :item_url, class: "form-control", style: "width: 400px;" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
          <%= link_to "一覧へ戻る", admin_books_path, class:"btn btn-primary ml-3" %>
          <%= link_to "削除", admin_book_path, method: :delete, class:"btn btn-danger ml-3", data: {confirm: "本当に削除しますか?"} %>
        </div>
      </div>
    <%end%>
  </div>
</div>

