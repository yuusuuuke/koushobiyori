<div class="container">
  <div class="row">
    <h5 class='mx-5 mt-5 mb-3 text-center', style="background-color: #eee; width:220px;">
      <b>カテゴリ一覧/追加</b>
    </h5>
  </div>
  <%= link_to "楽天BooksAPIカテゴリー検索（外部ページ）",
      'https://rakuten-api-documentation.antoniotajuelo.com/ja/rakuten-books/booksgenre-search',
      class: "btn btn-sm btn-primary mb-3"
    %>
  <div class="row">
    <%= render "admin/shared/error_messages", resource: @category %>
    <%= form_with model: @category, url:admin_categories_path do |f| %>
      <div class="form-inline">
        <span class="mr-3"><b><%= f.label :name, '追加するカテゴリ名' %></b></span>
        <span class="mr-3"><%= f.text_field :name, placeholder: "カテゴリ名", class: 'form-control' %></span>
        <span class="mr-3"><b><%= f.label :genre_code, '追加するジャンルコード' %></b></span>
        <span class="mr-3"><%= f.text_field :genre_code, placeholder: "ジャンルコード", class: 'form-control' %></span>
        <span class="mr-3"><%= f.submit '新規登録', class: 'btn btn-success' %></span>
      </div>
    <% end %>
  </div>
  <div class="row mt-5">
    <div class="col-7">
      <table class='table'>
        <thead style="background-color: #eee;">
          <th class="text-center">カテゴリ名</th>
          <th class="text-center">ジャンルID</th>
          <th></th>
        </thead>
        <% @categories.each do |category| %>
        <tbody>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.genre_code %></td>
            <td class="d-flex justify-content-end"><%= link_to "編集する", edit_admin_category_path(category.id), class: "btn btn-success" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
