 <header class="shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

<!--管理者がログインしているとき-->
        <% if admin_signed_in? %>
          <span>書好日和</span>
        <% else %>
          <font size="6">
            <%= link_to "好書日和", root_path, class: 'nav-link text-dark' %>
          </font>
        <% end %>
<!--会員がログインしているとき-->
        <% if user_signed_in? %>
          <div class="text-center">
            <%= image_tag current_user.get_profile_image(70,70),class:"rounded-circle" %>
            <b>ようこそ、<%= current_user.nickname %>さん!</b>
          </div>
        <% end %>

        <div class="col-sm-8">
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
<!--会員がログインしているとき-->
              <% if user_signed_in? %>
                <%= render "public/searches/search"%>
                <li>
                  <%= link_to 'マイページ', user_path(current_user), class: "btn btn-outline-dark ml-2 mt-3 mb-3", style:"margin-right:20px;" %>
                </li>
                <li>
                  <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-outline-dark ml-2 mt-3 mb-3", style:"margin-right:20px;" %>
                </li>
<!--管理者がログインしているとき-->
              <% elsif admin_signed_in? %>
                <li>
                  <%= link_to '会員一覧', admin_users_path, class: "btn btn-outline-dark ml-2 mt-3 mb-3", style:"margin-right:20px;" %>
                </li>
                <li>
                  <%= link_to '本カテゴリ一覧', admin_categories_path, class: "btn btn-outline-dark ml-2 mt-3 mb-3", style:"margin-right:20px;" %>
                </li>
                <li>
                </li>
                <li>
                  <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark ml-2 mt-3 mb-3", style:"margin-right:20px;" %>
                </li>
<!--ログインしていないとき-->
              <% else %>
                <li>
                  <%= link_to 'about', about_path, class: "btn btn-outline-dark ml-2 mt-3 mb-3", style:"margin-right:20px;" %>
                </li>
                <li>
                </li>
                <li>
                  <%= link_to '新規登録', new_user_registration_path, class: "btn btn-outline-dark ml-2 mt-3 mb-3", style:"margin-right:20px;" %>
                </li>
                <li>
                  <%= link_to 'ログイン', user_session_path, class: "btn btn-outline-dark ml-2 mt-3 mb-3", style:"margin-right:20px;" %>
                </li>
                <li>
                  <%= link_to '管理者ログイン', admin_session_path, class: "btn btn-outline-dark ml-2 mt-3 mb-3", style:"margin-right:20px;" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  </header>